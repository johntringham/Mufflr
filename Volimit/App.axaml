<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Volimit.App"
             RequestedThemeVariant="Dark">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
		<FluentTheme>
			<FluentTheme.Palettes>
				<!-- Palette for Light theme variant -->
				<ColorPaletteResources x:Key="Light" Accent="Green" RegionColor="White" ErrorText="Red" />
				<!-- Palette for Dark theme variant -->
				<ColorPaletteResources x:Key="Dark" Accent="#6387c7" RegionColor="#292d3e" ErrorText="Yellow" />
			</FluentTheme.Palettes>
		</FluentTheme>
    </Application.Styles>
	<Application.Resources>
		<FontFamily x:Key="Solitus">avares://Volimit/Assets/Fonts#Solitus</FontFamily>
		<FontFamily x:Key="OverusedGrotesk">avares://Volimit/Assets/Fonts#Overused Grotesk</FontFamily>
	</Application.Resources>
</Application>
